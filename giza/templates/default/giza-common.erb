  access_log  <%= node[:nginx][:log_dir] %>/<%= @application_name %>.access.log timed;
  underscores_in_headers on;

  client_max_body_size 20m;

  # Replace ELB ip address with actual forwarded address
  set_real_ip_from  10.0.0.0/8;
  real_ip_header    X-Forwarded-For;

  <% if @application[:ssl_support] %>
  ssl_certificate /etc/nginx/ssl/<%= @application[:domains].first %>.crt;
  ssl_certificate_key /etc/nginx/ssl/<%= @application[:domains].first %>.key;
  <% end %>
  <% if @application[:ssl_certificate_ca] -%>
  ssl_client_certificate /etc/nginx/ssl/<%= @application[:domains].first %>.ca;
  <% end -%>

  location @uwsgi {
    uwsgi_pass unix:///tmp/uwsgi-<%= @application_name %>.sock;
    include uwsgi_params;

    gzip on;
    gzip_types text/css application/javascript application/x-javascript text/plain;
  }

  location /api {
    uwsgi_pass unix:///tmp/uwsgi-<%= @application_name %>.sock;
    include uwsgi_params;

    gzip on;
    gzip_types application/json;
  }

  location ~* ^/static/(.*\.(js|css))$ {
    root <%= @application[:deploy_to] %>/current/<%= @application[:static_path] %>;
    try_files /$1 /$1/ @uwsgi;
    
    expires max;

    gzip on;
    gzip_types text/css application/javascript application/x-javascript text/plain;
  }

  location ~* ^/static/(.*)$ {
    root <%= @application[:deploy_to] %>/current/<%= @application[:static_path] %>;
    try_files /$1 /$1/ @uwsgi;
    
    gzip on;
    gzip_types text/css application/javascript application/x-javascript text/plain;
  }

  # Block all svn access
  if ($request_uri ~* ^.*\.svn.*$) {
     return 404;
  }
  
  # Block all git access
  if ($request_uri ~* ^.*\.git.*$) {
     return 404;
  }
  
  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.1;
    deny all;
  }
