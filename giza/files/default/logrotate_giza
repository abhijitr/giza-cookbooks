/var/log/giza/*.log {
        daily
        missingok
        rotate 7 
        compress
        delaycompress
        notifempty
        sharedscripts
        postrotate
                reload rsyslog >/dev/null 2>&1 || true

                for f in /var/log/giza/*.lzo
                do
                    if [ -e $f ]
                    then
                        /usr/local/bin/aws s3 put-object --bucket pickie-logs --key giza/$(basename $f) --body $f 
                    fi
                done
        endscript
}
